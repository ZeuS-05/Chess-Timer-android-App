<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/chessbackground"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/timer1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rotation="180"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250dp"
        android:textColor="@android:color/white"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/timer2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10:00"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="300dp"
        android:textColor="@android:color/white"/>

    <Button
        android:id="@+id/player1Button"
        android:layout_width="400dp"
        android:layout_height="180dp"
        android:layout_below="@id/timer1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-224dp"
        android:rotation="180"
        android:backgroundTint="@color/blur"
        android:textColor="@android:color/white"
        android:text="Player 1" />

    <Button
        android:id="@+id/player2Button"
        android:layout_width="400dp"
        android:layout_height="180dp"
        android:text="Player 2"
        android:layout_below="@id/timer2"
        android:backgroundTint="@color/blur"
        android:textColor="@android:color/white"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/startButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/player2Button"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="12dp"
        android:backgroundTint="@color/blur"
        android:textColor="@android:color/white"
        android:layout_toStartOf="@id/stopButton"
        android:text="Start" />

    <Button
        android:id="@+id/stopButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop"
        android:layout_below="@id/player2Button"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="12dp"
        android:backgroundTint="@color/blur"
        android:textColor="@android:color/white"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/resetButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:layout_below="@id/player2Button"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="12dp"
        android:backgroundTint="@color/blur"
        android:textColor="@android:color/white"
        android:layout_toEndOf="@id/stopButton"/>

    <Button
        android:id="@+id/changeModeButton"
        android:layout_width="94dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/startButton"
        android:layout_alignStart="@id/startButton"
        android:layout_marginStart="235dp"
        android:layout_marginTop="-583dp"
        android:backgroundTint="@color/blur"
        android:textColor="@android:color/white"
        android:text="Change Mode" />

</RelativeLayout>
